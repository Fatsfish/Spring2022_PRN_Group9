<!-- Page Content -->
<div class="container">
    <!-- Portfolio Item Heading -->
    <h1 class="my-4">@Html.DisplayFor(model => model.Event.Name)
        
      @*<small>Secondary Text</small>*@
    </h1>
  
    <!-- Portfolio Item Row -->
    <div class="row">
  
      <div class="col-md-8">
        <img class="img-fluid" src="@Html.DisplayFor(modelItem => modelItem.Event.Images)" alt="">
      </div>
  
      <div class="col-md-4">
        <h3 class="my-3">Event Description</h3>
        <p>@Html.DisplayFor(model => model.Event.Description)</p>
        <h3 class="my-3">Event Details</h3>
        <ul>
          <li>Creation Date: @Html.DisplayFor(model => model.Event.CreationDate)</li>
          <li>Registration End Date: @Html.DisplayFor(model => model.Event.RegistrationEndDate)</li>
          <li>Start Date Time: @Html.DisplayFor(model => model.Event.StartDateTime)</li>
          <li>End Date Time: @Html.DisplayFor(model => model.Event.EndDateTime)</li>
          <li>Place: @Html.DisplayFor(model => model.Event.Place)</li>
          <li>Is Public: @Html.DisplayFor(model => model.Event.IsPublic)</li>
          <li>Capacity: @Html.DisplayFor(model => model.Event.Capacity)</li>
          <li>Price: @Html.DisplayFor(model => model.Event.Price)</li>
          <li>Creation User: @Html.DisplayFor(model => model.Event.CreationUser.Bio)</li>
          <li>Status: @Html.DisplayFor(model => model.Event.Status.Name)</li>
        </ul>
      </div>
      </div>
      @if (@HttpContextAccessor.HttpContext.Session.GetInt32("id") == null)
    {
        <br />
        <div class="row">
            <div class="col-12">
                <div class="section-title-header text-center">
                    <h2 class="section-title wow fadeInUp" data-wow-delay="0.2s">Please Login to Apply Event or add Comment!</h2>
